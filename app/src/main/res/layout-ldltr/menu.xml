<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:padding="5dp"
    >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:weightSum="1">

        <Button
            android:id="@+id/pause_play_song"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:onClick="onPausePlaySong"
            android:text="| |"
            android:textAllCaps="true"
            android:textColor="#FF1C7CCE"
            android:textSize="20sp"
            android:textStyle="bold"
            android:clickable="true"
            />
        <Button
            android:id="@+id/next_song"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:onClick="onNextSong"
            android:text=">|"
            android:textAllCaps="true"
            android:textColor="#FF1C7CCE"
            android:textSize="20sp"
            android:textStyle="bold"
            android:clickable="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:weightSum="1"
        >
    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/musicProgress"
        android:layout_weight="0.95"
         />
        <TextView
            android:id="@+id/song_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:text="" />
    </LinearLayout>

    <ListView
        android:id="@+id/playlist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        >

    </ListView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:padding="5dp">
    <Button
        android:id="@+id/connection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:padding="10dp"
        android:text="Connection"
        android:onClick="CheckConnection"
        android:textAllCaps="true"
        android:textColor="#FF1C7CCE"
        android:textSize="20sp"
        android:textStyle="bold"
        android:clickable="true"
        />
    <Button
        android:id="@+id/add_song"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:onClick="AddSongButton"
        android:padding="10dp"
        android:text="Add a song"
        android:textAllCaps="true"
        android:textColor="#FF1C7CCE"
        android:textSize="20sp"
        android:textStyle="bold"
        android:clickable="true" />


    </LinearLayout>
</LinearLayout>